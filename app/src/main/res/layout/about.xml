<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9A9A9A">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KALKULATOR"
        android:textAlignment="center"
        android:textColor="@color/my_dark_gray"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="6sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_author"
                android:text="Autor: Mateusz Reczulski"
                android:layout_width="160pt"
                android:layout_height="60sp"
                android:textAlignment="center"
                android:textColor="@color/my_dark_gray"
                android:textSize="30dp"/>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_index"
            android:text="Index: 236440"
            android:layout_width="160pt"
            android:layout_height="60sp"
            android:textAlignment="center"
            android:textColor="@color/my_dark_gray"
            android:textSize="30dp"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_description"
                android:text="Aplikacja kalkulatora napisana w języku Kotlin oferuje dwa tryby działania: prosty i zaawansowany. W trybie prostym umożliwia wykonywanie podstawowych operacji arytmetycznych, takich jak dodawanie, odejmowanie, mnożenie i dzielenie. Natomiast tryb zaawansowany zawiera dodatkowe funkcje matematyczne, takie jak potęgowanie, pierwiastkowanie, funkcje trigonometryczne oraz inne zaawansowane operacje. Aplikacja zapewnia intuicyjny interfejs umożliwiający użytkownikowi łatwe przełączanie się między trybami oraz wygodne korzystanie z różnorodnych funkcji kalkulatora.
"
                android:layout_width="160pt"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/my_dark_gray"
                android:textSize="20dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>