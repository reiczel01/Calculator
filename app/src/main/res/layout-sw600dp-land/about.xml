<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9A9A9A">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KALKULATOR"
        android:textAlignment="center"
        android:textColor="@color/my_dark_gray"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/text_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autor: Mateusz Reczulski"
            android:textAlignment="center"
            android:textColor="@color/my_dark_gray"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/text_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Index: 236440"
            android:textAlignment="center"
            android:textColor="@color/my_dark_gray"
            android:textSize="18sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aplikacja kalkulatora napisana w języku Kotlin oferuje dwa tryby działania: prosty i zaawansowany. W trybie prostym umożliwia wykonywanie podstawowych operacji arytmetycznych, takich jak dodawanie, odejmowanie, mnożenie i dzielenie. Natomiast tryb zaawansowany zawiera dodatkowe funkcje matematyczne, takie jak potęgowanie, pierwiastkowanie, funkcje trigonometryczne oraz inne zaawansowane operacje. Aplikacja zapewnia intuicyjny interfejs umożliwiający użytkownikowi łatwe przełączanie się między trybami oraz wygodne korzystanie z różnorodnych funkcji kalkulatora."
            android:textAlignment="center"
            android:textColor="@color/my_dark_gray"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
